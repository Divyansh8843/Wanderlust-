<% layout("layouts/boilerplate.ejs") %>
    <form class="user-form needs-validation" novalidate method="post" action="/list/finduser">
        <h1 class="head-form">Registered User</h1>
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="username" placeholder="Username"
                    required>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="pasword" name="password"
                    placeholder="Password" required>
            </div>
        </div>
        <button type="submit" class="sign-upbtn btn btn-primary">Sign in</button>
    </form>