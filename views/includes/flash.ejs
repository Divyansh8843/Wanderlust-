 <!-- for success flash -->
<%if(success && success.length){%>
<div class="alert alert-success col-6 offset-3" role="alert">
    <%= success %>
</div>
<%}%>
<!-- for error flash -->
<%if(error && error.length){%>
    <div class="alert alert-danger col-6 offset-3" role="alert">
        <%=  error %>
    </div>
<%}%>
